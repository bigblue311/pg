<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap      
    PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="SystemConfigDO">

  <typeAlias alias="SystemConfig" type="com.pg.dal.model.SystemConfigDO"/>

  <resultMap id="RM" class="SystemConfig">
    <result property="id" column="id"/>
    <result property="gmtCreate" column="gmt_create"/>
    <result property="gmtModify" column="gmt_modify"/>
    <result property="configKey" column="config_key"/>
    <result property="configValue" column="config_value"/>
    <result property="description" column="description"/>
  </resultMap>
  
  <update id="update" parameterClass="SystemConfig">
    update pg_system_config set 
    <dynamic>
      <isNotEmpty property="configKey">  
         <![CDATA[   
           config_key = #configKey#,
         ]]> 
      </isNotEmpty>
      <isNotEmpty property="configValue">  
         <![CDATA[   
           config_value = #configValue#,
         ]]> 
      </isNotEmpty>
      <isNotEmpty property="description">  
         <![CDATA[   
           description = #description#,
         ]]> 
      </isNotEmpty>
    </dynamic>
    	gmt_modify = now()
    where
      id = #id#
  </update>

  <select id="getAll" resultMap="RM">
    select * from pg_system_config  
  </select>
  
  <select id="getById" parameterClass="java.lang.Long" resultMap="RM">
    select * from pg_system_config where id = #id#  
  </select>
  
  <sql id="where">
  	<include refid="validate" />
  	<dynamic prepend="where">
	    <isNotEmpty property="configKey" prepend="and">
        	<![CDATA[ 
        	config_key = #configKey#
        	]]>
	    </isNotEmpty>
	    <include refid="Common.queryModify" />
  	</dynamic>
  </sql>
  
  <sql id="validate">
  	<isNull property="configKey">
        <include refid="Common.validModify" />
	</isNull>
  </sql>
  
  <select id="getByCondition" parameterClass="java.util.HashMap" resultMap="RM">
    select * from pg_system_config 
    <include refid="where" />
    <include refid="Common.orderByModify" />
  </select>
  
  <select id="getPage" parameterClass="java.util.HashMap" resultMap="RM">
    select * from pg_system_config 
    <include refid="where" />
    <include refid="Common.orderByModify" />
    <include refid="Common.pageSql" />
  </select>
  
  <select id="getCount" parameterClass="java.util.HashMap" resultClass="java.lang.Integer">
    select count(*) from pg_system_config
	<include refid="where" />
  </select>
</sqlMap>