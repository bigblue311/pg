<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:jdbc="http://www.springframework.org/schema/jdbc" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p" 
    xmlns:aop="http://www.springframework.org/schema/aop"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="
    	http://www.springframework.org/schema/beans 
    	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    	http://www.springframework.org/schema/context
    	http://www.springframework.org/schema/context/spring-context-3.0.xsd ">
    
    <bean id="locationCache" class="com.pg.dal.cache.impl.LocationCacheImpl">
    	<property name="mySqlMapClient" ref="mySqlMapClient" />
    </bean>
    
    <bean id="newsCache" class="com.pg.dal.cache.impl.NewsCacheImpl">
    	<property name="mySqlMapClient" ref="mySqlMapClient" />
    </bean>
    
	<bean id="systemConfigCache" class="com.pg.dal.cache.impl.SystemConfigCacheImpl">
    	<property name="mySqlMapClient" ref="mySqlMapClient" />
    </bean>
    
    <bean id="roleCache" class="com.pg.dal.cache.impl.RoleCacheImpl">
    	<property name="mySqlMapClient" ref="mySqlMapClient" />
    </bean>
</beans>