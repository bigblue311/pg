<meta http-equiv="Content-Type" content="text/html;charset=utf-8"/>
<div id="grid"></div>
<script type="text/javascript">
      var Grid = BUI.Grid,
      Data = BUI.Data;
      var Grid = Grid,
      Store = Data.Store,
      columns = [
		{
			title : 'id',
			dataIndex : 'id',
			visible: false
		},{
          title : '角色',
          elCls: 'left',
          dataIndex :'name',
          width:'60%'
        },{
			title : '操作',
			elCls: 'center',
			dataIndex : 'oper',
			renderer : function(val,obj,index) {
				var child = '';
				if(obj!=null){
					var roleId = obj.id;
					child = '<a href="$admin.setTarget("resource.vm")?roleId='+roleId+'">权限管理</a>';
				}
				return child;
			},
	        width:'40%'
		}],
		data = #if($!{list})#noescape()$!{list}#end#else null #end;
      var store = new Store({
        data : data
      }),
      grid = new Grid.Grid({
        render:'#grid',
        width:'100%',//这个属性一定要设置
        columns : columns,
        store : store
      });

    grid.render();
</script>